<body>

<div id="fh5co-offcanvass">
    <a href="#" class="fh5co-offcanvass-close js-fh5co-offcanvass-close">Menu <i class="icon-cross"></i> </a>
    <h1 class="fh5co-logo"><a class="navbar-brand" href="/">Menu</a></h1>
    <ul>
        <form class="center" action="/?search=">
            <label for="city">Find city:</label>
            <br>
            <input type="text" id="search" name="search">
            <input type="submit" value="Ok">
            <li><a href="/?search=business">BUSINESS</a></li>
            <li><a href="/?search=art">ART</a></li>
            <li><a href="/?search=sports">SPORTS</a></li>
            <li><a href="/?search=health">HEALTH</a></li>
            <li><a href="/?search=video_games">VIDEO GAMES</a></li>
        </form>
    </ul>
</div>
<header id="fh5co-header" role="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <a href="#" class="fh5co-menu-btn js-fh5co-menu-btn">Menu <i class="icon-menu"></i></a>
                <a class="navbar-brand" href="/">News articles</a>
            </div>
        </div>
    </div>
</header>
<!-- END .header -->


<div id="fh5co-main">
    <div class="container">

        <div class="row">

            <div id="fh5co-board" data-columns>
                {% for article in articles %}
                    <div class="item">
                        <div class="animate-box">
                            <a href="{{ article.getPicture }}" class="image-popup fh5co-board-img" title="{{ article.getTitle }}"><img src="{{ article.getPicture }}" alt="Free HTML5 Bootstrap template"></a>
                        </div>
                        <a href="{{ article.getUrl }}" target="_blank">{{ article.getTitle }}</a>
                        <div class="fh5co-desc">{{ article.getDescription }}</div>
                        {% if article.getAuthor != null %}
                            <div class="fh5co-desc">By {{ article.getAuthor }}</div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>




<!-- jQuery -->
<script src="../../js/jquery.min.js"></script>
<!-- jQuery Easing -->
<script src="../../js/jquery.easing.1.3.js"></script>
<!-- Bootstrap -->
<script src="../../js/bootstrap.min.js"></script>
